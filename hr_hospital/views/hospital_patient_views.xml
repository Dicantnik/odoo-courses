<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="surname"/>
                <field name="phone"/>
                <field name="photo"/>
                <field name="gender"/>
                <field name="birthday_date"/>
                <field name="age"/>
                <field name="passport_data"/>
                <field name="contact_person"/>
                <field name="personal_doctor_id"/>
            </tree>
        </field>
    </record>

    <record id="hospital_patient_view_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button type="object" string="Quick Entry" class="btn-warning" name="quick_set_visit"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="phone"/>
                        <field name="photo"/>
                        <field name="gender"/>
                        <field name="birthday_date"/>
                        <field name="age"/>
                        <field name="passport_data"/>
                        <field name="contact_person"/>
                        <field name="personal_doctor_id"/>
                        <field name="diagnosis_ids" mode="tree"/>
                        <button type="object" name="action_history_visits">History visits</button>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_patient_view_search" model="ir.ui.view">
        <field name="name">hospital.patient.search</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Name Surname"
                       filter_domain="['|', ('name', 'ilike', self), ('surname', 'ilike', self)]"/>
                <separator/>
                <filter name="phone" string="Phone"/>
            </search>
        </field>
    </record>

    <record id="hospital_patient_act_window" model="ir.actions.act_window">
        <field name="name">Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <menuitem id="hr_hospital_patient_view"
              action="hospital_patient_act_window"
              parent="hr_hospital_patient_menu"
              name="Patient"
              sequence="1"/>
</odoo>
