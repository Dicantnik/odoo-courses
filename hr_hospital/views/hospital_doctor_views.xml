<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_doctor_view_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="surname"/>
                <field name="phone"/>
                <field name="photo"/>
                <field name="gender"/>
                <field name="specialization"/>
                <field name="is_intern"/>
                <field name="doctor_mentor_id"/>
            </tree>
        </field>
    </record>

    <record id="hospital_doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="surname"/>
                        <field name="phone"/>
                        <field name="photo"/>
                        <field name="gender"/>
                        <field name="specialization"/>
                        <field name="is_intern"/>
                        <field name="doctor_mentor_id" invisible="is_intern==False"/>
                        <field name="intern_doctor_ids" invisible="is_intern==True">
                            <kanban create="0">
                                <templates>
                                    <t t-name="kanban-box">
                                        <div>
                                            <div>
                                                <h2>
                                                    <field name="name"/>
                                                    <span></span>
                                                    <field name="surname"/>
                                                </h2>
                                            </div>
                                            <div>
                                                <field name="phone"/>
                                            </div>
                                            <div>
                                                <span>Is Intern</span>
                                                <field name="is_intern"/>
                                                <field name="doctor_mentor_id" invisible="is_intern==False"/>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                        </field>
                    </group>
                    <div invisible="is_intern==False">
                        <div>
                            <h2>Info about mentor</h2>
                        </div>
                        <group>
                            <field name="mentor_name"/>
                            <field name="mentor_surname"/>
                            <field name="mentor_phone"/>
                            <field name="mentor_specialization"/>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_doctor_view_search" model="ir.ui.view">
        <field name="name">hospital.doctor.search</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <search>
                <filter name="mentor" string="Mentor" domain="[('is_intern','!=',True)]"/>
                <separator/>
                <filter name="intern" string="Intern" domain="[('is_intern','=',True)]"/>
            </search>
        </field>
    </record>

    <record id="hospital_doctor_view_kanban" model="ir.ui.view">
        <field name="name">hospital.doctor.kanban</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban default_group_by="specialization">
                <field name="name"/>
                <field name="surname"/>
                <field name="intern_doctor_ids"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-menu">
                        <div class="container">
                            <a role="menuitem"
                               type="edit"
                               class="dropdown-item">
                                Edit
                            </a>
                            <a role="menuitem"
                               type="delete"
                               class="dropdown-item">
                                Delete
                            </a>
                            <ul class="oe_kanban_colorpicker"
                                data-field="color"
                            />
                        </div>
                    </t>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_card_header_title">
                                <div>
                                    <field name="name"/>
                                    <span></span>
                                    <field name="surname"/>
                                </div>
                            </div>
                            <div>
                                <span>Specialization</span>
                                <field name="specialization"/>

                            </div>
                            <div>
                                <span>Is Intern</span>
                                <field name="is_intern"/>
                                <div invisible="is_intern==False">
                                    <span>Mentor</span>
                                    <field name="doctor_mentor_id"/>
                                </div>
                                <div>Interns</div>
                                <field name="intern_doctor_ids" widget="many2many_tags"/>
                            </div>
                            <button name="quick_set_visit" type="object" class="btn-warning">Quick Entry</button>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="hospital_doctor_act_window" model="ir.actions.act_window">
        <field name="name">Doctor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form,search,kanban</field>
    </record>

    <menuitem id="hr_hospital_doctor_view"
              action="hospital_doctor_act_window"
              parent="hr_hospital_doctor_menu"
              name="Doctor"
              sequence="4"/>

</odoo>
