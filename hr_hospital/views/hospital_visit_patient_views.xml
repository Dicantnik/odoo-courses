<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_visit_patient_view_tree" model="ir.ui.view">
        <field name="name">hospital.visit.patient.tree</field>
        <field name="model">hospital.visit.patient</field>
        <field name="arch" type="xml">
            <tree>
                <field name="status"/>
                <field name="planned_date_time"/>
                <field name="fact_date_time"/>
                <field name="doctor_id"/>
                <field name="patient_id"/>
                <field name="diagnosis_ids"/>
            </tree>
        </field>
    </record>

    <record id="hospital_visit_patient_view_form" model="ir.ui.view">
        <field name="name">hospital.visit.patient.form</field>
        <field name="model">hospital.visit.patient</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <group>
                        <field name="planned_date_time"/>
                        <field name="fact_date_time"/>
                        <field name="doctor_id" readonly="fact_date_time"/>
                        <field name="patient_id" readonly="fact_date_time"/>
                        <field name="diagnosis_ids" readonly="fact_date_time" mode="tree"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hospital_visit_patient_view_calendar" model="ir.ui.view">
        <field name="name">hospital.visit.patient.calendar</field>
        <field name="model">hospital.visit.patient</field>
        <field name="arch" type="xml">
            <calendar create="0" date_start="planned_date_time" mode="month">
                <field name="doctor_id"/>
                <field name="patient_id"/>
            </calendar>
        </field>
    </record>

    <record id="hospital_visit_patient_view_search" model="ir.ui.view">
        <field name="name">hospital.visit.patient.search</field>
        <field name="model">hospital.visit.patient</field>
        <field name="arch" type="xml">
            <search>
                <group string="Group By">
                    <filter string="Status" name="status" domain="[]" context="{'group_by': 'status'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="hospital_visit_patient_view_pivot" model="ir.ui.view">
        <field name="name">hospital.visit.patient.pivot</field>
        <field name="model">hospital.visit.patient</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="doctor_id" type="row"/>
                <field name="status" type="col" interval="month"/>
            </pivot>
        </field>
    </record>

    <record id="hospital_visit_patient_act_window" model="ir.actions.act_window">
        <field name="name">Visit patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.visit.patient</field>
        <field name="view_mode">tree,form,calendar,search,pivot</field>
    </record>

    <menuitem id="hr_hospital_visit_patient_view"
              action="hospital_visit_patient_act_window"
              parent="hr_hospital_patient_menu"
              name="Visits patient"
              sequence="5"/>
</odoo>
