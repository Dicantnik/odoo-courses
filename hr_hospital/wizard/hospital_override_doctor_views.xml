<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hospital_override_doctor_view_form" model="ir.ui.view">
        <field name="name">hospital.override.doctor.form</field>
        <field name="model">hospital.override.doctor</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <group>
                        <field name="doctor_id" options="{'no_create': True}"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_submit_override"
                            string="Override"
                            type="object"/>
                    <button special="cancel" string="Close"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="hospital_override_doctor_act_window_from_actions"
            model="ir.actions.act_window">
        <field name="name">Override Doctor</field>
        <field name="res_model">hospital.override.doctor</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr_hospital.model_hospital_patient"/>
        <field name="binding_view_types">list</field>
        <field name="binding_type">action</field>
    </record>


</odoo>
