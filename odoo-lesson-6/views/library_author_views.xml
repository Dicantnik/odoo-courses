<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_author_view_tree" model="ir.ui.view">
        <field name="name">library.author.tree</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_for_me"/>
                <field name="days_difference"/>
            </tree>
        </field>
    </record>

    <record id="library_author_view_form" model="ir.ui.view">
        <field name="name">library.author.form</field>
        <field name="model">library.author</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_for_me"/>
                <field name="days_difference"/>
            </tree>
        </field>
    </record>

    <record id="library_author_act_window" model="ir.actions.act_window">
        <field name="name">Author</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">library.author</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="library_author_view"
              action="library_author_act_window"
              parent="library_author_menu"
              name="Authors"
              sequence="8"/>
</odoo>