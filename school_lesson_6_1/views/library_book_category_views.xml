<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_category_view_tree" model="ir.ui.view">
        <field name="name">library.book.category.tree</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="library_book_category_view_form" model="ir.ui.view">
        <field name="name">library.book.category.form</field>
        <field name="model">library.book.category</field>
        <field name="arch" type="xml">
            <form>
                <header></header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="actin_books_this_category" icon="fa-plus">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Category</span>
                                <span class="o_stat_text">books</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="library_book_category_act_window" model="ir.actions.act_window">
        <field name="name">Books Category</field>
        <field name="res_model">library.book.category</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="library_book_category_view"
              action="library_book_category_act_window"
              parent="library_book_menu"
              name="Books Category"
              sequence="5"/>
</odoo>